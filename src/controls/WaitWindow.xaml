<Window x:Name="window" x:Class="kobenos.controls.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kobenos.controls"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" WindowStyle="None"
        ShowInTaskbar="False" ShowActivated="True" ResizeMode="NoResize"
        Title="Čekejte prosím" Height="150" Width="300">
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid  HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <TextBlock HorizontalAlignment="Center" Text="Čekejte prosím..." />
            
            <ProgressBar HorizontalAlignment="Stretch" Height="10" Grid.Row="1" VerticalAlignment="Top" Margin="10" Width="Auto" Value="33" />

            <TextBlock Text="{Binding ProgressText, ElementName=window}" HorizontalAlignment="Center" Grid.Row="2" />
        </Grid>
    </Border>
</Window>
