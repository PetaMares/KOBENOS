<?xml version="1.0" encoding="UTF-8"?>
<suite name="Výchozí kontrola bezpečnosti">
	<checks>
		<suite name="Všeobecná nastavení">
			<checks>
				<os name="Kontrola verze Windows">
				</os>
				<wmi name="Kontrola aktivace Windows">
					<scope>root\CIMV2</scope>
					<query>SELECT * FROM SoftwareLicensingProduct WHERE Name LIKE "%Windows%" AND LicenseStatus = 1</query>
					<eval>
						<first property="LicenseStatus" value="1" />
					</eval>
				</wmi>
				<wmi name="Kontrola nastavení BIOS">
					<scope>root\CIMV2</scope>
					<query>SELECT * FROM Win32_BootConfiguration WHERE Name='BootConfiguration' AND Caption LIKE "%Harddisk0%" </query>
					<eval>
						<first property="Caption" value=".*\\Device\\Harddisk0.*" />
					</eval>					
				</wmi>
				<suite name="Článek 7 - Kontrola deaktivace WLAN">
					<checks>
						<wmi name="kontrolaWLANState">
							<scope>root\CIMV2</scope>
							<query>SELECT * FROM Win32_Service WHERE Name='WlanSvc'</query>
							<eval>
								<first property="State" value="Stopped" />
								<first property="StartMode" value="Disabled" />
							</eval>
						</wmi>
						<wmi name="kontrolaWWANState">
							<scope>root\CIMV2</scope>
							<query>SELECT * FROM Win32_Service WHERE Name='WwanSvc'</query>
							<eval>
								<first property="State" value="Stopped" />
								<first property="StartMode" value="Disabled" />
							</eval>
						</wmi>
					</checks>
				</suite>
				<suite name="Článek 8 - Kontrola deaktivace Bluetooth">
					<checks>
						<wmi name="kontrolaBTState">
							<scope>root\CIMV2</scope>
							<query>SELECT * FROM Win32_Service WHERE Name='bthserv'</query>
							<eval>
								<first property="State" value="Stopped" />
								<first property="StartMode" value="Disabled" />
							</eval>
						</wmi>
					</checks>
				</suite>
				<suite name="Článek 11 - Kontrola uživatelských účtů a skupin podle doporučené tabulky">
					<checks>
						<wmi name="user">
							<scope>root\CIMV2</scope>
							<query>SELECT * FROM Win32_GroupUser WHERE GroupComponent.Name = 'Administrators'</query>
							<eval>
								<first property="Status" value="Degraded" />
							</eval>
						</wmi>
						<registry name="kontrola registrů">
							<key>HKEY_LOCAL_MACHINE\System\CurrentControlSet\Control</key>
							<value>LsaFullPrivilegeAuditing</value>
							<eval>
								<first value="0" />
							</eval>
						</registry>
					</checks>
				</suite>
				<suite name="Článek 12 - Kontrola nastavení práv k tiskárnám">
					<checks>
						<wmi name="Najít fax v tiskárnách.">
							<scope>root\CIMV2</scope>
							<query>SELECT * FROM Win32_Printer WHERE Name LIKE 'Fax'</query>
							<eval>
								<first property="Name" value="Fax" />
							</eval>
						</wmi>
					</checks>
				</suite>
				<suite name="Článek 14 - Zásady hesla">
					<checks>
						<registry name="Heslo musí splňovat požadavky na složitost">
							<key></key>
							<value></value>
                            <eval>
							     <first value="Accepted"/>
                            </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Maximální stáří hesla">
							<key>HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\Netlogon\Parameters</key>
							<value>MaximumPasswordAge"</value>
							 <eval>
                                <firts value="90"/>
                            </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Minimální délka hesla">
							<key></key>
							<value></value>
						    <eval> 
                              	<first value="9"/>
                            </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Minimální stáří hesla">
							<key></key>
							<value></value>
                            <eval>
							    <first value="1"/>
                            </eval>     
                        </registry>
					</checks>
					<checks>
						<registry name="Ukládat hesla pomocí reverzibilního šifrování">
							<key></key>
							<value></value>
							<eval>
                                <first value="Disabled"/>
                            </eval>
                        </registry>    
					</checks>
					<checks>
						<registry name="Vynutit použití historie hesel">
							<key></key>
							<value></value>
							<eval>
                                 <first value="24"/>
                            </eval>
					</checks>
				</suite> 
                <suite name="Článek 15 - Zásady uzamčení účtu">
					<checks>
						<registry name="Doba uzamčení účtu">
							<key>HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\RemoteAccess\Parameters\AccountLockout</key>
							<value>MaxDenials</value>
							<eval> 
                             <first value"0"/>
                            </eval> 
                        </registry>    
					</checks>
					<checks>
						<registry name="Prahová hodnota pro uzamčení účtu">
							<key>HKEY_LOCAL_MACHINE\Software\Microsoft\Windows\CurrentVersion\Policies\System</key>
							<value>MaxDevicePasswordFailedAttempts</value>
							<eval>
                                <first value="3"/>
                            </eval>
                        </registry>    
					</checks>
					<checks>
						<registry name="Vynulovat čítač uzamčení účtu po">
							<key></key>
							<value></value>
							<eval>
                                <first value="60"/>
                            </eval>    
					</checks>
				</suite>
                <suite name="Článek 16 - Zásady auditu">
					<checks>
						<registry name="Auditovat použití oprávnění">
							<key></key>
							<value></value>
                            <eval>
                                <first value="No auditing"/>
                        </registry>    
					</checks>
					<checks>
						<registry name="Auditovat přístup k adresářové službě">
							<key></key>
							<value></value>
                            <eval>
                                <first value=="No auditing"/>
                             </eval>
                        </registry>   
					</checks>
					<checks>
						<registry name="Auditovat přístup k objektům">
							<key></key>
							<value></value>
                            <eval>
                                <first value=="No auditing"/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat sledování procesů">
							<key></key>
							<value></value>
                            <eval>
                                <first value=="No auditing"/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat správu účtů">
							<key></key>
							<value></value>
                            <eval>
                                <first value==""/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat systémové události">
							<key></key>
							<value></value>
                            <eval>
                                <first value==""/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat události přihlášení">
							<key></key>
							<value></value>
                            <eval>
                                <first value=="No auditing"/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat události přihlášení k účtu">
							<key></key>
							<value></value>
                            <eval>
                                <first value==""/>
                             </eval>
                        </registry>
					</checks>
					<checks>
						<registry name="Auditovat změny zásad">
						    <key></key>
							<value></value>
                            <eval>
                                <first value=="No auditing"/>
                             </eval>
                        </registry>
					</checks>
				</suite>               
			</checks>
		</suite>
	
    
    
    
    
