<Window x:Class="kobenos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:kobenos.controls"
        mc:Ignorable="d"
        Title="KOntrola BEzpečnostního Nastavení Operačního Systému" Height="800" Width="1000"
        MinHeight="800" MinWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="KOBENOS" FontSize="18" HorizontalAlignment="Left" Grid.Row="0" FontWeight="Bold"/>
        <TextBlock Text="KOntrola BEzpečnostního Nastavení Operačního Systému" FontSize="14" HorizontalAlignment="Left" Grid.Row="1" FontWeight="Bold"/>
        <Separator Grid.Row="2" Margin="0 10"/>

        <Frame Grid.Row="3" x:Name="MainContent" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
