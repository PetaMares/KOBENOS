<Page x:Class="kobenos.ExecutionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:src="clr-namespace:kobenos.classes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="executionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Seznam testů" FontSize="18" HorizontalAlignment="Left" Grid.Row="0" FontWeight="Bold" />

        <TreeView Name="categoryTree" Grid.Row="1" Margin="0 10 0 0" >
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type src:Suite}" ItemsSource="{Binding checks}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding name}" FontSize="14" />
                        <TextBlock Text=" [" Foreground="Blue" FontSize="14"/>
                        <TextBlock Text="{Binding checks.Count}" Foreground="Blue" FontSize="14"/>
                        <TextBlock Text="]" Foreground="Blue" FontSize="14"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type src:AbstractCheck}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding name}" FontSize="14"  Margin="0 0 10 0"/>
                        <TextBlock Text="{Binding result.name}" FontSize="14" FontWeight="Bold" Foreground="{Binding result.color}"/>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>

        <Grid Grid.Row="2" HorizontalAlignment="Stretch" Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Opravit nastavení" Grid.Column="0" FontSize="14" Padding="3" Margin="0 0 10 0"/>
            <Button Content="Report" Grid.Column="1" FontSize="14" Padding="3" Click="reportClick" />
        </Grid>
    </Grid>
</Page>
