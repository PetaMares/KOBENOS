<Page x:Class="kobenos.summaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kobenos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="summaryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Výsledek testu" HorizontalAlignment="Center" FontSize="18" Grid.Row="0"/>
        
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Testovaný:" Grid.Column="0" FontSize="14"/>
            <TextBox Name="Tested" Padding="3" Grid.Column="1" FontSize="14" Margin="10 0"/>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Testující:" Grid.Column="0" FontSize="14"/>
            <TextBox Name="Tester" Padding="3" Grid.Column="1" FontSize="14" Margin="10 0"/>
        </Grid>

        <Grid Grid.Row="3" HorizontalAlignment="Stretch">
            <Label Content="Vyhověl" FontSize="32" Foreground="White" Background="Green" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="4" HorizontalAlignment="Stretch" Margin="0 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Generování reportu" Grid.Column="0" FontSize="14" Padding="3" Margin="0 0 10 0"/>
            <Button Content="Konec" Grid.Column="1" FontSize="14" Padding="3" Click="konecClick" />
        </Grid>

    </Grid>
</Page>
